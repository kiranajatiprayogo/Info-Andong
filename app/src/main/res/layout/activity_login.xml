<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/login"
            android:layout_margin="20dp"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="wrap_content"
            android:layout_height="650dp"
            android:background="@drawable/bg_text">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp">

                <TextView
                    android:id="@+id/judulLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text=" Login ke Akun Anda"
                    android:textColor="@color/primary"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/ed_usernameLogin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/judulLogin"
                    android:backgroundTint="@color/primary"
                    android:fontFamily="@font/poppins"
                    android:hint="Username"
                    android:maxLines="1"
                    android:textColor="@color/primary"
                    android:textSize="12sp" />

                    <EditText
                        android:id="@+id/ed_passwordLogin"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/ed_usernameLogin"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/primary"
                        android:fontFamily="@font/poppins"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textColor="@color/primary"
                        android:textSize="12sp" />

                <TextView
                    android:id="@+id/btn_lupaPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins"
                    android:text="Lupa Password ?"
                    android:layout_below="@id/ed_passwordLogin"
                    android:textAlignment="textEnd"
                    android:textColor="@color/primary"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/btn_lupaPass"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/bg_btnlogin"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="L o g i n"
                    android:textAllCaps="false"
                    android:textColor="@color/secondary"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_login"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins"
                    android:text="Belum Punya Akun ? \nRegister"
                    android:textAlignment="center"
                    android:textColor="@color/primary"
                    android:textSize="12dp" />

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>