<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KelolaRiwayatPendakian">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@drawable/header"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:id="@+id/tv_inputPendakian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/poppins"
                android:text="Kelola Data Riwayat Pendakian"
                android:textAlignment="center"
                android:textColor="@color/secondary"
                android:textSize="15dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_idRegu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Regu : "
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/poppins"/>

        <EditText
            android:id="@+id/ed_idRegu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_rounded"
            android:layout_marginHorizontal="30dp"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/tv_idPendaki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Pendaki : "
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/poppins"/>

        <EditText
            android:id="@+id/ed_idPendaki"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_rounded"
            android:layout_marginHorizontal="30dp"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/tv_statusPendakian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status Pendakian : "
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/poppins"/>

        <Spinner
            android:id="@+id/sp_statusPendakian"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_rounded"
            android:fontFamily="@font/poppins"
            android:textAlignment="center"
            android:entries="@array/status_pendakian"
            android:scrollbarSize="25dp"
            android:spinnerMode="dropdown"
            android:autofillHints="Mulai"/>

        <TextView
            android:id="@+id/tv_waktuMulai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waktu Mulai : "
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/poppins"/>

        <TextView
            android:id="@+id/ed_waktuMulai"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_rounded"
            android:inputType="datetime"
            android:gravity="center"
            android:text=""
            android:fontFamily="@font/poppins"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/tv_NaikPos1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(Naik) dan Tiba di Pos 1 : "
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/poppins"/>

        <EditText
            android:id="@+id/ed_NaikPos1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_rounded"
            android:hint="      Klik 2x disini"
            android:gravity="center"
            android:inputType="datetime"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_NaikPos2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(Naik) dan Tiba di Pos 2 : "
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/poppins"/>

        <EditText
            android:id="@+id/ed_NaikPos2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_rounded"
            android:hint="      Klik 2x disini"
            android:gravity="center"
            android:inputType="datetime"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_NaikPos3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(Naik) dan Tiba di Pos 3 : "
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/poppins"/>

        <EditText
            android:id="@+id/ed_NaikPos3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_rounded"
            android:hint="      Klik 2x disini"
            android:gravity="center"
            android:inputType="datetime"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_TurunPos3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(Turun) dan Tiba di Pos 3 : "
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/poppins"/>

        <EditText
            android:id="@+id/ed_TurunPos3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_rounded"
            android:hint="      Klik 2x disini"
            android:gravity="center"
            android:inputType="datetime"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_TurunPos2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(Turun) dan Tiba di Pos 2 : "
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/poppins"/>

        <EditText
            android:id="@+id/ed_TurunPos2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_rounded"
            android:hint="      Klik 2x disini"
            android:gravity="center"
            android:inputType="datetime"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_TurunPos1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(Turun) dan Tiba di Pos 1 : "
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/poppins"/>

        <EditText
            android:id="@+id/ed_TurunPos1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_rounded"
            android:hint="      Klik 2x disini"
            android:gravity="center"
            android:inputType="datetime"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_waktuSelesai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waktu Selesai : "
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/poppins"/>

        <EditText
            android:id="@+id/ed_waktuSelesai"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_rounded"
            android:inputType="datetime"
            android:hint="      Klik 2x disini"
            android:gravity="center"
            android:fontFamily="@font/poppins"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Riwayat Pendakian : "
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/poppins"/>

        <TextView
            android:id="@+id/tv_idPendakian"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="number"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/bg_rounded"
            android:gravity="center"
            android:fontFamily="@font/poppins"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/tv_yakin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apakah anda yakin ingin menghapus data riwayat pendakian ini ? "
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            android:gravity="center"
            android:fontFamily="@font/poppins"/>

        <Button
            android:id="@+id/btn_simpanRiwayatPendakian"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/rounded"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="Simpan"
            android:textAllCaps="false"
            android:textColor="@color/secondary"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_editRiwayatPendakian"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/rounded"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:textAllCaps="false"
            android:text="Simpan Perubahan"
            android:textColor="@color/secondary"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_hapusRiwayatPendakian"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/red"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="Hapus"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>