<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".InputBerhasil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:src="@drawable/ic_succes"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textColor="@color/white"
            android:text="SELAMAT ! ! !"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginHorizontal="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textColor="@color/white"
            android:text="Data Berhasil Disimpan"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:text="Apakah ingin menyimpan data lagi ?"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_marginHorizontal="30dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp">

            <TextView
                android:id="@+id/btn_ya"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_marginHorizontal="60dp"
                android:layout_marginStart="60dp"
                android:background="@drawable/bg_rounded"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="YA"
                android:textColor="@color/primary"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/btn_tidak"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="60dp"
                android:background="@drawable/bg_rounded"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="TIDAK"
                android:textColor="@color/primary"
                android:textSize="15dp" />
        </RelativeLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>