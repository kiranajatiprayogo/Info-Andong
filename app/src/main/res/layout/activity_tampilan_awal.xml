<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TampilanAwal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/climb"
            android:layout_marginVertical="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_text"
            android:orientation="vertical">

        <TextView
            android:id="@+id/tv_Apk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textColor="@color/primary"
            android:text="Info Andong"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="28dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tv_deskripsiApk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textColor="@color/primary2"
            android:gravity="center"
            android:text="Aplikasi tentang Gunung Andong, dapat digunakan untuk pemesanan online dan berisi artikel tentang panduan mendaki"
            android:textSize="13dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"/>

        <Button
            android:id="@+id/btn_mulai"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Mulai"
            android:background="@drawable/bg_rounded4"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="45dp"
            android:gravity="center"
            android:fontFamily="@font/poppins"
            android:textSize="16dp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/secondary"/>

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>