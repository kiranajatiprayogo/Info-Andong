<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardAdmin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@drawable/header"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/tv_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/poppins"
                android:text="Selamat Datang,"
                android:textColor="@color/secondary"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_petugas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_welcome"
                android:layout_marginHorizontal="30dp"
                android:fontFamily="@font/poppins"
                android:text=" "
                android:textColor="@color/secondary"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_profil"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginVertical="25dp"
                android:layout_marginEnd="30dp"
                android:src="@drawable/ic_profile" />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="@color/edittext"
            android:layout_height="100dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">

            <TextView
                android:id="@+id/tv_pendakian"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:text="Data Rencana Pendakian"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/primary"/>

            <Button
                android:id="@+id/btn_lihatPendakian"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="Lihat Data"
                android:textColor="@color/secondary"
                android:textSize="15dp" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardBackgroundColor="@color/edittext"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">

            <TextView
                android:id="@+id/tv_data_pendaki"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="Data Diri Pendaki"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins"
                android:textSize="15dp"
                android:textColor="@color/primary"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_lihatPendaki"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="Lihat Data"
                android:textColor="@color/secondary"
                android:textSize="15dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="@color/edittext"
            android:layout_height="100dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">

            <TextView
                android:id="@+id/tv_laporan2"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:text="Data Riwayat Pendakian"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/primary"/>

            <Button
                android:id="@+id/btn_riwayatPendakian"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="Lihat Data"
                android:textColor="@color/secondary"
                android:textSize="15dp" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="@color/edittext"
            android:layout_height="100dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">

            <TextView
                android:id="@+id/tv_laporan"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:text="Laporan Pendakian"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/primary"/>

            <Button
                android:id="@+id/btn_laporanPendakian"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded"
                android:fontFamily="@font/poppins"
                android:textAllCaps="false"
                android:gravity="center"
                android:text="Lihat Data"
                android:textColor="@color/secondary"
                android:textSize="15dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_inputPendaki"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="30dp"
            app:cardBackgroundColor="@color/primary"
            android:layout_gravity="end|bottom"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginEnd="6dp"
                    android:layout_toStartOf="@+id/btn_inputPetugas"
                    android:src="@drawable/ic_add" />

                <TextView
                    android:id="@+id/btn_inputPetugas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_marginVertical="12dp"
                    android:layout_marginEnd="25dp"
                    android:gravity="center"
                    android:text="Input Data Petugas"
                    android:textColor="@color/secondary"
                    android:textSize="15dp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>