<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LihatRiwayatPendakianUser">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/header">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="25dp"
                android:background="@drawable/bg_rounded3"
                android:paddingStart="12dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/tv_lihatPendakian"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginVertical="25dp"
                android:layout_toEndOf="@+id/iv_back"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="Riwayat Pendakian"
                android:textAlignment="center"
                android:textColor="@color/secondary"
                android:textSize="18dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_idRegu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="15dp"
            android:textSize="15dp"
            android:gravity="center"
            android:text="ID Regu : "
            android:textColor="@color/primary"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="560dp"
            android:layout_margin="10dp"
            android:id="@+id/rvRiwayatPendakianUser"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>