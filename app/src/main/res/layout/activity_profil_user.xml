<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".ProfilUser">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="250dp"
            android:background="@drawable/bg_rounded2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="50dp"
            android:src="@drawable/ic_profile" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvUser"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="100dp"
            tools:itemCount="1"></androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_below="@+id/emailUser"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_btnlogin"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="L O G O U T"
            android:textColor="@color/secondary"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>